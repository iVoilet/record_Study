<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>StudentService</servlet-name>
        <servlet-class>com.elysia.javaweb.servlet.StudentService</servlet-class>
        <load-on-startup>0</load-on-startup><!--通过这一句话可以实现在服务器启动的时候创建，中间要加数字-->
        <!--同时，这个数字是用来提示顺序的，数字越小，运行越早（当有多个startup时）-->
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentService</servlet-name>
        <url-pattern>/servlet/student</url-pattern>
    </servlet-mapping>
</web-app>